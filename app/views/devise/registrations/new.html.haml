#sign-in
  %h3 Sign up

  = semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.semantic_errors
    = f.inputs do
      = f.input :email, label: false, input_html: { placeholder: 'Email', class: 'input-xlarge' }
      = f.input :password, label: false, input_html: { placeholder: 'Password', class: 'input-xlarge' }
      = f.input :password_confirmation, label: false, input_html: { placeholder: 'Password Confirmation', class: 'input-xlarge' }
    = f.action :submit, label: 'Sign up', button_html: { class: 'btn btn-primary' }

  = render :partial => "devise/shared/links"
